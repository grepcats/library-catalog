@{
  Layout = "_Layout";
}

<h2>Authors</h2>
<a href="/authors/new">Add Author to Author list</a>
@if (@Model.Count > 0)
{
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var author in @Model)
      {
        <tr>
          <td>@author.GetFirstName()</td>
          <td>@author.GetFirstName()</td>
        </tr>
      }
    </tbody>
  </table>

  }
