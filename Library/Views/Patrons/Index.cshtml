@if (@Model.Count > 0)
{


  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Fines</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var patron in @Model)
      {
        <tr>
          <td>@patron.GetFirstName() @patron.GetLastName()</td>
          <td>@patron.GetEmail()</td>
          <td>@patron.GetFines()</td>
        </tr>
      }
    </tbody>
  </table>

  }
