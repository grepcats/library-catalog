@{
  Layout = "_Layout";
}

<h2>Add Book</h2>
<form method="post" action="/books/new">
  <div class="form-group">
    <label for="book-title">Book Title</label>
    <input name="book-title" type="text" class="form-control">
  </div>
  <h3>Author</h3>
  <div class="form-group">
    <label for="author-first">Author First Name</label>
    <input name="author-first" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="author-last">Author Last Name</label>
    <input name="author-last" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>
<a href="/books">Return to books page</a>
