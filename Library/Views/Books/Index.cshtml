@{
  Layout = "_Layout";
}

<h1>Books</h1>
<a href="/books/new">Add book to catalog</a>
@if (@Model.Count > 0)
{


  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Book Title</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      @foreach(var book in @Model)
      {
        <tr>
          <td>@book.GetTitle()</td>
          <td><a href="/books/@book.GetId()/delete"><span class="glyphicon glyphicon-remove"></span></a></td>
        </tr>
      }
    </tbody>
  </table>

  }
