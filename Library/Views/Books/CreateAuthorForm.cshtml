@{
  Layout = "_Layout";
}

<h2>Author</h2>
<form method="post" action="/books/@Model.GetId()/authors/new">
  <div class="form-group">
    <label for="author-first">Author First Name</label>
    <input name="author-first" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="author-last">Author Last Name</label>
    <input name="author-last" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-danger">Add</button>
</form>
<a href="/">Return Home</a>
